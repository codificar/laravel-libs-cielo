    "psr-0": {
      "Cielo": "src"
    }
  },
  "suggest": {
    "monolog/monolog": "Allows more advanced logging of the application flow"
  },
  "config": {
      "optimize-autoloader": true,
      "preferred-install": "dist",
      "sort-packages": true
  },
  "minimum-stability": "dev"
}
